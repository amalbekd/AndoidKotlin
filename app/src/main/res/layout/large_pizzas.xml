<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/food_image2"

        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:srcCompat="@drawable/naruto_pizza"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_image2"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/food_title2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Avengers" />

        <TextView
            android:id="@+id/food_description2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="It is a description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/background"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/food_price2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="1000 â‚¸" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>