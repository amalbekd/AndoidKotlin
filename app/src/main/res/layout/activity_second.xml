<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageButton
        android:id="@+id/back"
        android:onClick="goBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_keyboard_arrow_down_24"
        android:backgroundTint="@color/white"
        android:background="@drawable/background_curve"
        />

    <ImageView
        android:id="@+id/food2_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        tools:srcCompat="@drawable/naruto_pizza"
        />

    <TextView
        android:id="@+id/food2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food2_image"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:paddingStart="10dp"
        tools:text="Title"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/food2_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food2_title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingStart="10dp"
        tools:text="Description" />

    <Button
        android:id="@+id/food2_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="bottom"
        android:textAlignment="center"
        android:backgroundTint="@color/orange"
        tools:text="1000"
        tools:ignore="RtlCompat" />

</RelativeLayout>